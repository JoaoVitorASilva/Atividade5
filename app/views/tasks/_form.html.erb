<div class="card">
    <%= form_with model: @task, local: true do |form| %>
        <div class="card-body">
            <div class="form-group">
                <%= form.label "Título" %><br>
                <%= form.text_field :title, class:"form-control" %>
            </div>

            <div class="form-group">
                <%= form.label "Descrição" %><br>
                <%= form.text_area :description, class:"form-control", rows: 5 %>
            </div>

            <div class="form-group">
                <%= form.label "Data" %><br>
                <%= form.date_field :due, class:"form-control" %>
            </div>

            <div class="form-group">
                <%= form.label "A tarefa foi concluída com sucesso?" %><br>
                <%= form.check_box :done, class:"form-control" %>
            </div>

            <div class="form-group text-right">
                <%= link_to "Voltar", tasks_path, class:"btn btn-outline-secondary" %>
                <%= form.submit "Salvar", class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>